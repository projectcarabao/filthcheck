{
  "compilerOptions": {
    "target": "es2016",                                 
    "module": "nodenext",                                
    "moduleResolution": "nodenext",                    
     "resolveJsonModule": true,                      
     "outDir": "./dist",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                     
    "skipDefaultLibCheck": true,                     
    "skipLibCheck": true,  
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }                           
  },
  "include": ["src/**/*"]
}
